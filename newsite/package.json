{
  "name": "newsite",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:report": "node scripts/coverage-report.js",
    "test:unit": "jest --testPathPattern='__tests__/(components|hooks|utils)' --verbose",
    "test:integration": "jest --testPathPattern='__tests__/pages' --verbose",
    "test:animations": "jest --testPathPattern='__tests__/animations' --verbose",
    "test:critical-path": "jest --testNamePattern='(critical|smoke)' --verbose",
    "test:parallel": "run-p test:unit test:integration test:animations",
    "test:concurrent": "node scripts/concurrent-test-executor.js",
    "test:concurrent:fast": "node scripts/concurrent-test-executor.js --mode=fast",
    "test:concurrent:full": "node scripts/concurrent-test-executor.js --mode=full",
    "test:load-balanced": "node scripts/load-balanced-test-runner.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:critical": "playwright test --grep='@critical'",
    "test:e2e:parallel": "playwright test --workers=4",
    "test:pre-commit": "npm run test:concurrent:fast",
    "test:pre-push": "npm run test:concurrent:full",
    "test:all": "run-s lint type-check test:concurrent:full test:e2e",
    "migrate-plans": "node scripts/migrate-to-timestamp-ids.js",
    "test:parallel-runner": "node scripts/parallel-test-runner.js",
    "test:benchmark": "VERBOSE=1 npm run test:parallel-runner pre-push",
    "test:performance": "node scripts/test-performance-monitor.js",
    "monitor": "node scripts/parallel-execution-monitor.js start",
    "monitor:status": "node scripts/parallel-execution-monitor.js status",
    "monitor:report": "node scripts/parallel-execution-monitor.js report",
    "monitor:dashboard": "node scripts/monitoring-dashboard.js",
    "monitor:stop": "node scripts/parallel-execution-monitor.js stop",
    "resource:report": "node scripts/resource-manager.js",
    "resource:monitor": "node scripts/resource-integration.js",
    "test:concurrent:managed": "node scripts/concurrent-test-executor.js --mode=full --resource-management",
    "test:load-balanced:managed": "node scripts/load-balanced-test-runner.js --resource-management",
    "setup:hooks": "bash scripts/setup-hooks.sh",
    "dev:ai": "next dev --turbopack --port 3001",
    "build:ai": "node scripts/build-ai-simple.js",
    "start:ai": "node scripts/ai-server-manager.js start",
    "start:ai:prod": "node scripts/start-ai.js",
    "stop:ai": "node scripts/ai-server-manager.js stop",
    "status:ai": "node scripts/ai-server-manager.js status",
    "test:ai": "node scripts/ai-server-manager.js test",
    "cleanup:ai": "node scripts/ai-server-manager.js cleanup",
    "clean:ai": "rm -rf .next-ai",
    "clean:all": "rm -rf .next .next-ai node_modules/.cache",
    "test:ai:lifecycle": "node scripts/test-ai-server-lifecycle.js",
    "test:ai:cleanup": "node scripts/test-ai-cleanup-validation.js"
  },
  "dependencies": {
    "next": "^15.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "npm-run-all2": "^8.0.4",
    "typescript": "^5"
  }
}
