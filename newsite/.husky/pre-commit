#!/bin/sh
# Pre-commit hook for Golden Coast Amenities website
# Fast parallel validation for immediate feedback

echo "ğŸš€ Running fast pre-commit validation..."

# Change to the correct directory
cd newsite 2>/dev/null || {
  echo "âœ“ Already in newsite directory"
}

# Check if we're in a Next.js project
if [ ! -f "package.json" ] || ! grep -q "next" package.json; then
  echo "âŒ Error: Not in a Next.js project directory"
  echo "Make sure you're in the newsite/ directory"
  exit 1
fi

# Check if this commit contains only non-code files
cd ..
if ! git diff --cached --name-only | grep -qE '\.(js|jsx|ts|tsx|css|scss|sass)$|newsite/(pages|components|hooks)/|newsite/styles/.*\.(css|scss|sass)$|package\.json$'; then
  echo "ğŸ“ Documentation/configuration-only changes detected"
  echo "â­ï¸  Skipping all tests for non-code changes"
  echo "âœ… Pre-commit checks completed for documentation changes!"
  echo "ğŸš€ Proceeding with commit..."
  exit 0
fi

cd newsite

# Run fast parallel pre-commit validation
echo "ğŸ’» Code changes detected - running parallel validation..."

# Use our custom parallel test runner for optimal performance
node scripts/parallel-test-runner.js pre-commit || {
  echo "âŒ Pre-commit validation failed. Please fix issues before committing."
  exit 1
}

echo "âœ… Fast pre-commit validation passed!"
echo "ğŸš€ Proceeding with commit..."