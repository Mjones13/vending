#!/bin/sh
# Pre-push hook for Golden Coast Amenities website
# Comprehensive parallel testing before pushing to remote

echo "ğŸ§ª Running comprehensive pre-push validation..."

# Change to the correct directory
cd newsite 2>/dev/null || {
  echo "âœ“ Already in newsite directory"
}

# Check if we're in a Next.js project
if [ ! -f "package.json" ] || ! grep -q "next" package.json; then
  echo "âŒ Error: Not in a Next.js project directory"
  echo "Make sure you're in the newsite/ directory"
  exit 1
fi

# Check if this push contains only documentation changes
cd ..
if ! git diff HEAD~1..HEAD --name-only | grep -qE '\.(js|jsx|ts|tsx|css|scss|sass)$|newsite/(pages|components|hooks)/|newsite/styles/.*\.(css|scss|sass)$|package\.json$'; then
  echo "ğŸ“ Documentation-only changes detected in commit history"
  echo "â­ï¸  Skipping comprehensive testing for documentation changes"
  echo "âœ… Pre-push checks completed for documentation changes!"
  echo "ğŸš€ Proceeding with push..."
  exit 0
fi

cd newsite

echo "ğŸ’» Code changes detected - running comprehensive parallel validation..."

# Ensure dependencies are installed
echo "ğŸ“¦ Ensuring dependencies are up to date..."
npm ci --silent || {
  echo "âŒ Failed to install dependencies"
  exit 1
}

# Use our custom parallel test runner for comprehensive testing
node scripts/parallel-test-runner.js pre-push || {
  echo "âŒ Pre-push validation failed. Please fix issues before pushing."
  echo "ğŸ’¡ Tip: Run 'npm run test:all' locally to reproduce the issues"
  exit 1
}

echo "âœ… All pre-push validation passed!"
echo "ğŸš€ Code is ready for remote repository!"